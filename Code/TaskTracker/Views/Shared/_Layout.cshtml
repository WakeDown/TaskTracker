<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <header>

        <nav class="top-nav  @(String.IsNullOrEmpty(ViewBag.HeaderBgColor) ? "indigo lighten-2" : ViewBag.HeaderBgColor)">
            <div class="container">
                <div class="row">
                    <a href="#" data-activates="nav-mobile" class="button-collapse top-nav full hide-on-large-only"><i class="material-icons large">menu</i></a>
                    <span class="page-title left">
                        @(String.IsNullOrEmpty(ViewBag.Header) ? ViewBag.Title : ViewBag.Header)
                    </span>
                    <span class="right">
                        Вы вошли как @ViewBag.CurUser.ShortName
                    </span>
                </div>
            </div>
        </nav>

        <ul id="nav-mobile" class="side-nav fixed" style="width: 240px; left: -250px;">
            <li class="logo">
                @*@Html.ActionLink("Задачи", "List", "Task", new { area = "" }, new { @class = "brand-logo" })*@
            </li>
            <li>
                <div class="row">
                    <a class="waves-effect waves-teal" href="@Url.Action("List", "Task")">Список задач<i class="material-icons left center" style="line-height: 64px;">list</i></a>
                </div>
            </li>
            <li>
                <div class="row">
                    <a class="waves-effect waves-teal" href="@Url.Action("New", "Task")" target="_blank">Новая<i class="material-icons left center" style="line-height: 64px;">add</i></a>
                </div>
            </li>
            <li>
                <div class="row">
                    <a class="waves-effect waves-teal" href="@Url.Action("Index", "Planing")">План<i class="material-icons left center" style="line-height: 64px;">format_list_numbered</i></a>
                </div>
            </li>
        </ul>
    </header>
    <main>
        <div class="container">
            <div class="row">
                @RenderBody()
            </div>
        </div>


    </main>
    <footer>
        <div class="footer-copyright">
            <div class="container"><p>&copy; @DateTime.Now.Year</p> <a href="mailto: wakedown.59@gmail.com" class="btn waves-effect waves-light red lighten-3">Оставить отзыв</a></div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/materialize")
    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        $(document).ready(function () {
            $(".button-collapse").sideNav();
        });

    </script>
</body>
</html>
