@using TaskTracker.Models
@model TaskTracker.Models.Task
@{
    ViewBag.Title = "Новая задача";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<p>
    @using (Html.BeginForm("New", "Task", FormMethod.Post, new { }))
    {
        <div class="row">
            <div class="input-field col s12">
                @Html.TextBoxFor(m => m.Name, "{0:d}", new {@id = "name", @class = "validate", required = "required"})
                <label for="name">Название</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                @Html.TextBoxFor(m => m.Descr, "{0:d}", new {@id = "descr", @class = "validate", required = "required"})
                <label for="descr">Описание</label>
            </div>
        </div>
        <div class="row">
            <div class="col s12">
                <label for="category">Категория</label>
                @Html.DropDownListFor(m => m.TaskCategoryId, TaskCategory.GetSelectionList(), new {required = "required", id = "category", @class = "browser-default"})
            </div>
        </div>
        <div class="row">
            <div class="col s12">
                <label for="specialist">Специалист</label>
                @Html.DropDownListFor(m => m.SpecialistSid, Specialist.GetProgrammersSelectionList(), "--специалист не указан--", new { id = "specialist", @class = "browser-default" })
            </div>
        </div>
        <button class="btn waves-effect waves-light" type="submit" name="action">
            Сохранить<i class="material-icons right">done</i>
        </button>
    }
</p>
